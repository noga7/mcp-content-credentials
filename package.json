{
  "name": "mcp-content-credentials",
  "version": "1.0.0",
  "description": "MCP server for reading Content Credentials from images and media files using c2patool",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "mcp-content-credentials": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "start:api": "node build/rest-api.js",
    "start:mcp": "node build/mcp-sse.js",
    "dev": "ts-node --esm src/index.ts",
    "dev:api": "ts-node --esm src/rest-api.ts",
    "dev:mcp": "ts-node --esm src/mcp-sse.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "precommit": "npm run lint && npm run format:check && npm run type-check",
    "prepare": "npm run build",
    "postinstall": "node scripts/install-trustmark.cjs",
    "install-deps": "node scripts/install-trustmark.cjs",
    "install-trustmark": "node scripts/install-trustmark.cjs"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "c2pa",
    "content-credentials",
    "content-authenticity",
    "content-provenance",
    "claude",
    "ai"
  ],
  "author": "Noga Hurwitz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/noga7/mcp-content-credentials.git"
  },
  "bugs": {
    "url": "https://github.com/noga7/mcp-content-credentials/issues"
  },
  "homepage": "https://github.com/noga7/mcp-content-credentials#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.1",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
